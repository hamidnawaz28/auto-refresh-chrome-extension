{
  "manifest_version": 3,
  "name": "Auto Page Refresh",
  "description": "This extension enables users to auto page refresh after regular and random intervals with option change time and value preference",
  "version": "1.1",

  "permissions": ["tabs", "storage"],

  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/auto_page_refresh.png",
      "32": "icons/auto_page_refresh.png",
      "48": "icons/auto_page_refresh.png",
      "128": "icons/auto_page_refresh.png"
    },
    "default_title": "Auto Page Refresh",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/auto_page_refresh.png",
    "32": "icons/auto_page_refresh.png",
    "48": "icons/auto_page_refresh.png",
    "128": "icons/auto_page_refresh.png"
  }
}
